<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>7. Support</h1>
        <p class="text-muted mb-0">Resources (7.1) & Documented Information (7.5)</p>
    </div>
    <a href="/iso" class="btn btn-outline-secondary">Back to ISO Hub</a>
</div>

<div class="row">
    
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm border-success h-100">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-tools me-2"></i>Resources</h5>
                
                <a href="/tables" class="btn btn-sm btn-light text-success">
                    Manage Full List
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Resource Name</th>
                            <th>Type</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(resources && resources.length > 0){ %>
                            <% resources.forEach(r => { %>
                                <tr>
                                    <td class="fw-bold"><%= r.name %></td>
                                    <td><small class="text-muted"><%= r.type %></small></td>
                                    <td>
                                        <span class="badge bg-<%= r.status === 'Active' ? 'success' : 'warning' %>">
                                            <%= r.status %>
                                        </span>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="3" class="text-center text-muted">No resources listed.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100 border-primary">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Documents</h5>
                
                <% if (currentUser && (currentUser.role === 'quality_manager' || currentUser.role === 'admin')) { %>
                    <button class="btn btn-sm btn-light text-primary" data-bs-toggle="collapse" data-bs-target="#uploadBox">
                        <i class="fas fa-plus me-1"></i> New Document
                    </button>
                <% } %>
            </div>
            
            <div class="card-body">
                
                <div class="collapse mb-3" id="uploadBox">
                    <div class="card card-body bg-light border-0">
                        <form action="/iso/support/upload" method="POST" enctype="multipart/form-data">
                            
                            <div class="mb-2">
                                <label class="form-label small fw-bold">Document Name</label>
                                <input type="text" name="docName" class="form-control form-control-sm" placeholder="e.g. Safety Policy" required>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <label class="form-label small fw-bold">Type</label>
                                    <select name="docType" class="form-select form-select-sm" required>
                                        <option value="Manual">Manual</option>
                                        <option value="Procedure">Procedure</option>
                                        <option value="Work Instruction">Work Instruction</option>
                                        <option value="Form">Form / Record</option>
                                        <option value="External">External Standard</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label class="form-label small fw-bold">Owner</label>
                                    <select name="docOwner" class="form-select form-select-sm" required>
                                        <option value="Quality Manager">Quality Manager</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Staff">Staff</option>
                                    </select>
                                </div>
                            </div>

                            <div class="input-group input-group-sm mt-2">
                                <input type="file" name="document" class="form-control" required>
                                <button class="btn btn-success" type="submit">Save</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="list-group list-group-flush">
                    <% if (documents && documents.length > 0) { %>
                        <% documents.forEach(doc => { %>
                            <div class="list-group-item d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center px-0 py-3">
                                
                                <div class="d-flex align-items-center mb-2 mb-sm-0">
                                    <div class="me-3 text-center" style="width: 40px;">
                                        <i class="far fa-file-alt fa-lg text-secondary"></i>
                                    </div>
                                    
                                    <div>
                                        <strong><%= doc.name %></strong>
                                        
                                        <% if(doc.type) { %>
                                            <span class="badge bg-light text-dark border ms-1" style="font-size: 0.7rem;">
                                                <%= doc.type %>
                                            </span>
                                        <% } %>

                                        <div class="small text-muted">
                                            Owner: <%= doc.owner || 'N/A' %> | 
                                            <%= new Date(doc.date).toLocaleDateString() %>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="d-flex gap-2">
                                    <a href="<%= doc.path %>" class="btn btn-sm btn-outline-primary" download>
                                        <i class="fas fa-download me-1"></i> Download
                                    </a>
                                    
                                    <% if (currentUser && (currentUser.role === 'quality_manager' || currentUser.role === 'admin')) { %>
                                        <form action="/iso/support/delete/<%= doc.id %>" method="POST" onsubmit="return confirm('Delete this file?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt me-1"></i> Delete
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-folder-open fa-2x mb-2"></i><br>
                            No documents uploaded.
                        </div>
                    <% } %>
                </div>

            </div>
        </div>
    </div>

</div>

<%- include('../partials/footer') %>
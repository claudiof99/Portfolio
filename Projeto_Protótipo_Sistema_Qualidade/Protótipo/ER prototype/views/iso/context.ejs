<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>4. Context of the Organization</h1>
        <p class="text-muted mb-0">Manage Interested Parties & Stakeholder Requirements</p>
    </div>
    <a href="/iso" class="btn btn-outline-secondary">Back to ISO Hub</a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Interested Parties</h5>
    </div>
    <div class="card-body">

        
            <% if (currentUser && (currentUser.role === 'quality_manager' || currentUser.role === 'admin')) { %>
            <div class="bg-light p-3 rounded mb-4 border">
                <h6 class="mb-3 text-primary">Add New Stakeholder</h6>
                <form action="/iso/context/add" method="POST">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label small fw-bold">Name</label>
                            <input name="name" class="form-control" placeholder="e.g. Customers" required>
                        </div>
                        
                        <div class="col-md-2">
                            <label class="form-label small fw-bold">Type</label>
                            <select name="type" class="form-select">
                                <option>Internal</option>
                                <option>External</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label small fw-bold">Needs</label>
                            <input name="needs" class="form-control" placeholder="e.g. Quality Product" required>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label small fw-bold">Expectations</label>
                            <input name="expectations" class="form-control" placeholder="e.g. Fast Delivery" required>
                        </div>

                        <div class="col-md-1 d-flex align-items-end">
                            <button class="btn btn-success w-100" title="Add">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        <% } %>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 25%;">Stakeholder</th>
                        <th style="width: 10%;">Type</th>
                        <th style="width: 30%;">Needs </th>
                        <th style="width: 30%;">Expectations </th>
                    </tr>
                </thead>
                <tbody>
                    <% if (stakeholders && stakeholders.length > 0) { %>
                        <% stakeholders.forEach(s => { %>
                            <tr>
                                <td class="fw-bold"><%= s.name %></td>
                                <td>
                                    <span class="badge bg-<%= s.type === 'Internal' ? 'info' : 'secondary' %>">
                                        <%= s.type %>
                                    </span>
                                </td>
                                <td><%= s.needs %></td>
                                <td><%= s.expectations || '-' %></td> 
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center text-muted p-4">
                                No interested parties defined yet.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>5. Leadership</h1>
        <p class="text-muted mb-0">Quality Policy & Motivations </p>
    </div>
    <a href="/iso" class="btn btn-outline-secondary">Back to ISO Hub</a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm mb-4 border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Leadership Motivations & Policy</h5>
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p style="white-space: pre-wrap;"><%= policy.content || "No policy defined yet." %></p>
                    <footer class="blockquote-footer">Last updated by <%= policy.updatedBy || "Management" %></footer>
                </blockquote>
            </div>
        </div>

        <% if (currentUser && (currentUser.role === 'admin')) { %>
            <div class="card shadow-sm">
                <div class="card-header">Edit Policy</div>
                <div class="card-body">
                    <form action="/iso/leadership/update" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Motivations / Policy Content</label>
                            <textarea name="content" class="form-control" rows="5" required><%= policy.content %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>
</div>
<%- include('../partials/footer') %>